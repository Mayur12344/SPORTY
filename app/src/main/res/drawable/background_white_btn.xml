<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <corners android:radius="10dp"/>
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>
        </shape>
        <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/> <!-- Transparent shadow color -->
                <corners android:radius="100dp"/>
            </shape>
        </item>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Black border -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Main background layer -->
    <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

</layer-list>
